# PHRONAI Server Environment Variables
# Minimal config for MVP demo

# Django
DJANGO_SECRET_KEY=phronai-dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL via Docker)
DB_NAME=phronai
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis (via Docker)
REDIS_HOST=localhost

# External APIs (REQUIRED - get free keys)
DEEPGRAM_API_KEY=your-deepgram-key-here
GROQ_API_KEY=your-groq-key-here

# Supabase (OPTIONAL for MVP - JWT verification skipped)
# SUPABASE_JWT_SECRET=skip-for-now

# AI Configuration
LLM_MODEL=llama-3.3-70b-versatile
LLM_MAX_RETRIES=3

# Logging
LOG_LEVEL=DEBUG
